@model BookViewModelWithId

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><strong>@Model.Title</strong> by @Model.Author</h1>

@if (!string.IsNullOrEmpty(Model.CoverImageURL))
{
    <div>
        <hr />
        <br />
        <img src="@Model.CoverImageURL" style="max-height: 400px; width: auto" alt="Cover Image" loading="lazy"/>
        <br />
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicationYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary px-0" style="width: 100px">Back</a>
    @if (User.IsInRole(Roles.Librarian) || User.IsInRole(Roles.Administrator))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-0" style="width: 100px">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger px-0" style="width: 100px">Delete</a>
    }
</div>
